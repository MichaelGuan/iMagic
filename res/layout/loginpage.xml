<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/default_bg">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="35.0dip"
		android:layout_marginTop="28.0dip" android:layout_marginRight="35.0dip">
		<ImageView android:id="@+id/faceImg" android:background="@drawable/h001"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" />
		<EditText android:id="@+id/login_edit_account"
			android:paddingLeft="5.0dip" android:saveEnabled="true"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="8.0dip" android:layout_marginBottom="12.0dip"
			android:layout_below="@id/faceImg" android:hint="账号"
			android:maxLength="16"/>
		<EditText android:id="@+id/login_edit_pwd"
			android:paddingLeft="5.0dip" android:saveEnabled="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:maxLength="33" android:layout_below="@id/login_edit_account"
			android:layout_alignLeft="@id/login_edit_account" android:hint="密码"
			android:layout_alignRight="@id/login_edit_account" android:inputType="textPassword"/>
		<Button android:textColor="#ffffffff" android:id="@+id/login_btn_login"
			android:layout_width="fill_parent" android:layout_height="48.0dip"
			android:layout_marginTop="18.0dip" android:text="登陆"
			android:layout_below="@id/login_edit_pwd"
			android:layout_centerHorizontal="true" />
	</RelativeLayout>
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="35.0dip"
		android:layout_marginTop="12.0dip" android:layout_marginRight="35.0dip"
		android:layout_marginBottom="28.0dip" android:stretchColumns="1">
		<TableRow>
			<CheckBox android:id="@+id/login_cb_savepwd"
				android:paddingLeft="32.0dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content"  android:width="118.0dip"
				android:text="记住密码" />

			<CheckBox android:layout_gravity="right" android:id="@+id/login_cb_auto"
				android:paddingLeft="32.0dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="自动登陆" android:width="118.0dip" />
		</TableRow>
	</TableLayout>
</LinearLayout>
